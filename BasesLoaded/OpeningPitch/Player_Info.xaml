<Window x:Class="OpeningPitch.Player_Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player_Info" Height="358.261" Width="517.6" SizeToContent="WidthAndHeight">
    <Grid x:Name="PlayerInfo" Margin="0,0,-8,2" MouseDown="PlayerInfo_MouseDown">
        <ComboBox x:Name="Position" HorizontalAlignment="Left" Margin="4,200,0,0" VerticalAlignment="Top" Width="106" SelectedItem="{Binding ChosenValue, Mode=TwoWay}" Height="22">
            <ComboBoxItem x:Name="Pitcher" Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="Batter" Content="Batter" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="_1st_Baseman" Content="1st Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="_2nd_Baseman" Content="2nd Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="_3rd_Baseman" Content="3rd Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="ShortStop" Content="ShortStop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="Catcher" Content="Catcher" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="lbl_FirstName" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,7,0,0"/>
        <Label x:Name="lbl_Address" Content="Address" HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Address1" Content="Address" HorizontalAlignment="Left" Margin="0,80,0,0" VerticalAlignment="Top" Height="28" Width="82"/>
        <Label x:Name="lbl_MI" Content="MI" HorizontalAlignment="Left" Margin="182,7,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_LastName" Content="Last Name" HorizontalAlignment="Left" Margin="261,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_FirstName" HorizontalAlignment="Left" Height="23" Margin="43,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_MI" HorizontalAlignment="Left" Height="23" Margin="211,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
        <TextBox x:Name="txt_LastName" HorizontalAlignment="Left" Height="23" Margin="332,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_Address1" HorizontalAlignment="Left" Height="26" Margin="70,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314"/>
        <TextBox x:Name="txt_Address" HorizontalAlignment="Left" Height="23" Margin="70,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314"/>
        <Label x:Name="label" Content="State" HorizontalAlignment="Left" Margin="0,113,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="State" HorizontalAlignment="Left" Margin="70,117,0,0" VerticalAlignment="Top" Width="36" ItemsSource="{Binding AllowDrop, ElementName=label}">
            <ComboBoxItem Content="ComboBoxItem" HorizontalAlignment="Left" Width="92"/>
        </ComboBox>
        <Label x:Name="lbl_Zipcode" Content="Zipcode" HorizontalAlignment="Left" Margin="168,117,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Zipcode" HorizontalAlignment="Left" Height="26" Margin="226,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <Label x:Name="lbl_Phone" Content="Phone" HorizontalAlignment="Left" Margin="4,157,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Phone" HorizontalAlignment="Left" Height="26" Margin="70,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="PlayerformReset" Content="Reset" HorizontalAlignment="Left" Margin="226,267,0,0" VerticalAlignment="Top" Width="75" Click="PlayerformReset_Click"/>
        <Button x:Name="CancelForm" Content="Cancel" HorizontalAlignment="Left" Margin="424,267,0,0" VerticalAlignment="Top" Width="75" Click="CancelForm_Click"/>
        <Button x:Name="AddPlayertoTeam" Content="Add" HorizontalAlignment="Left" Margin="35,262,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
