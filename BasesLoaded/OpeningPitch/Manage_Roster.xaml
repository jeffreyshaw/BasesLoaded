<Window x:Name="Manage_Team" x:Class="OpeningPitch.Manage_Roster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage_Team" Height="346" Width="365" MouseDown="Manage_Team_MouseDown">
    <Grid Margin="0,0,-43,-21" MouseDown="Grid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Accept_Player" Content="Aceept Request" HorizontalAlignment="Left" Margin="145,249,0,0" VerticalAlignment="Top" Width="90" Height="20" Grid.ColumnSpan="3"/>
        <Button x:Name="Remove_Player" Content="Remove" HorizontalAlignment="Left" Margin="70,249,0,0" VerticalAlignment="Top" Width="75" Height="20" Grid.ColumnSpan="2"/>
        <Button x:Name="Send_Email" Content="Send Email" HorizontalAlignment="Left" Margin="0,249,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <ListBox HorizontalAlignment="Left" Height="158" Margin="-1,0,0,0" VerticalAlignment="Top" Width="362" Grid.ColumnSpan="3"/>
        <Button x:Name="Player_Add" Content="Add Player" Grid.Column="2" HorizontalAlignment="Left" Margin="32,249,0,0" VerticalAlignment="Top" Width="72" Click="Player_Add_Click" RenderTransformOrigin="-0.028,0.55"/>

    </Grid>
</Window>
