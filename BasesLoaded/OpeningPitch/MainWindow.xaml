<Window x:Class="OpeningPitch.MainWindow" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="503" 
        Width="402">

    <Grid x:Name="Main_Window" MouseDown="Main_Window_MouseDown" Cursor="Arrow">
        <TextBox x:Name="Username_Input" 
                 Margin="159,147,93,331" 
                 TextWrapping="Wrap" 
                 Width="150" 
                 Opacity="0.6"
                 Height="25"/>
        <Label x:Name="Username_Label" 
        	Content="Username" 
        	HorizontalAlignment="Left" 
        	Margin="94,147,0,0" 
        	VerticalAlignment="Top" 
        	Height="23"/>
        <PasswordBox x:Name="Password_Input" 
                     MaxLength="25" 
                     HorizontalAlignment="Left" 
                     Margin="159,183,0,0" 
                     VerticalAlignment="Top" 
                     Width="150" Opacity="0.6" Height="25"/>
        <Label x:Name="Password_Label" 
               Content="Password" 
               HorizontalAlignment="Left" 
               Margin="94,183,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Button Content="Log In"
                IsDefault="true"
                HorizontalAlignment="Center" 
                Margin="-1,227,0,0" 
                VerticalAlignment="Top" 
                Width="75" 
                Opacity="0.6" Click="Log_In_Click"/>
        <Button x:Name="Register_Button" 
                Content="Register" 
                HorizontalAlignment="Center" 
                Margin="-1,254,0,0" 
                VerticalAlignment="Top" 
                Width="75" Opacity="0.6" 
                Click="Register"/>
        <Button Content="X" 
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Height="24" 
                Opacity="0.6" 
                Background="#FFFB0505" 
                Click="Exit_Click" RenderTransformOrigin="0.5,0.5" Width="25" Margin="0,-1,-1,0">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        



    </Grid>
</Window>
