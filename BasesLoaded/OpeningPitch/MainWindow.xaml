<Window x:Class="OpeningPitch.MainWindow" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        OpacityMask="White"
        WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="350" 
        Width="525">
    
    <Grid x:Name="Main_Window">
        <TextBox x:Name="Username_Input" 
                 Height="23" 
                 Margin="186,147,189,180" 
                 TextWrapping="Wrap" 
                 Width="150" 
                 Opacity="0.6"/>
        <Label x:Name="Username_Label" 
        	Content="Username" 
        	HorizontalAlignment="Left" 
        	Margin="121,147,0,0" 
        	VerticalAlignment="Top" 
        	Height="23"/>
        <PasswordBox x:Name="Password_Input" 
                     MaxLength="25" 
                     HorizontalAlignment="Left" 
                     Margin="186,186,0,0" 
                     VerticalAlignment="Top" 
                     Width="150" Opacity="0.6"/>
        <Label x:Name="Password_Label" 
               Content="Password" 
               HorizontalAlignment="Left" 
               Margin="121,183,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Button x:Name="Register_Button" 
                Content="Register" 
                HorizontalAlignment="Left" 
                Margin="226,238,0,0" 
                VerticalAlignment="Top" 
                Width="75" Opacity="0.6" 
                Click="Register"/>
        <Button Content="X" 
                Margin="506,0,0,0" 
                VerticalAlignment="Top" 
                Height="24" 
                Opacity="0.6" 
                Background="#FFFB0505" 
                Click="Exit_Click"/>
        <Button Content="Log In" 
                HorizontalAlignment="Left" 
                Margin="226,211,0,0" 
                VerticalAlignment="Top" 
                Width="75" 
                Opacity="0.6" Click="Log_In_Click"/>
        

    </Grid>
</Window>
