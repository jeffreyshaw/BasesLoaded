<Window x:Class="OpeningPitch.MainWindow" 
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        AllowsTransparency="True"
        Height="503" 
        Width="402" MouseDown="Window_MouseDown" WindowStyle="None">

    <Grid x:Name="Main_Window">
        <TextBox x:Name="Username_Input" 
                 Margin="125,185,127,293" 
                 TextWrapping="Wrap" 
                 Width="150" 
                 Opacity="0.6"
                 Height="25"/>
        <Label x:Name="Username_Label" 
        	Content="Username" 
        	HorizontalAlignment="Left" 
        	Margin="57,185,0,0" 
        	VerticalAlignment="Top" 
        	Height="23"/>
        <PasswordBox x:Name="Password_Input" 
                     MaxLength="25" 
                     HorizontalAlignment="Left" 
                     Margin="125,215,0,0" 
                     VerticalAlignment="Top" 
                     Width="150" Opacity="0.6" Height="25"/>
        <Label x:Name="Password_Label" 
               Content="Password" 
               HorizontalAlignment="Left" 
               Margin="60,215,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Button Content="Log In"
                IsDefault="true"
                HorizontalAlignment="Center" 
                Margin="160,260,162,0" 
                VerticalAlignment="Top" 
                Width="80" 
                Opacity="0.6" Click="Log_In_Click"/>
        <Button x:Name="Register_Button" 
                Content="Register" 
                HorizontalAlignment="Center" 
                Margin="160,287,162,0" 
                VerticalAlignment="Top" 
                Width="80" Opacity="0.6" 
                Click="Register"/>
        <Button Content="X" 
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Height="24" 
                Opacity="0.6" 
                Background="#FFFB0505" 
                Click="Exit_Click" RenderTransformOrigin="0.5,0.5" Width="25" Margin="0,-1,-1,0">
        </Button>




    </Grid>
</Window>
