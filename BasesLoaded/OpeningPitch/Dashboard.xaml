<Window x:Name="tab_Dashboard" x:Class="OpeningPitch.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Softball Roster" 
    Height="500" Width="400"
    WindowStartupLocation="CenterScreen"
    MouseDown="tab_Dashboard_MouseDown" 
    WindowStyle="None" 
    AllowsTransparency="True">

    <Grid x:Name="TC_Dashboard" 
          Background="{DynamicResource ButtonBackgroundBrush}">
        <Button x:Name="Login_Home1" 
			Content="Home" 
			HorizontalAlignment="Left" 
			Height="22" 
			VerticalAlignment="Top" 
			Width="95" 
            Margin="11,60,0,0"/>
        <Button x:Name="Create_Team1" 
			Content="Team" 
			HorizontalAlignment="Left" 
			Margin="106,60,0,0" 
			VerticalAlignment="Top" 
			Width="95" 
			Click="CreateTeam_Click" 
			Height="22"/>
        <Button x:Name="EditInfo_btn" 
        	Content="Edit Info" 
        	HorizontalAlignment="Left" 
        	VerticalAlignment="Top" 
        	Width="94" 
            Margin="201,60,0,0" 
            Height="24"/>
        <Button x:Name="Notification_btn" 
			Content="Notification" 
			HorizontalAlignment="Left" 
			Margin="295,60,0,0" 
			VerticalAlignment="Top" 
			Width="95" 
			Height="22"/>
        <Button x:Name="Approve_Player" 
			Content="Approve Player" 
			HorizontalAlignment="Left" 
			Margin="0,347,0,0" 
			VerticalAlignment="Top" 
			Width="120"/>
        <Button x:Name="Edit_Roster" 
			Content="Edit Roster" 
			HorizontalAlignment="Left" 
			Margin="0,377,0,0" 
			VerticalAlignment="Top" 
			Width="120"/>
        <Button x:Name="View_Roster" 
			Content="View Roster" 
			HorizontalAlignment="Left"
			Margin="0,407,0,0" 
			VerticalAlignment="Top" 
			Width="120"/>
        <Button x:Name="Delete_Player" 
			Content="Delete Player" 
			HorizontalAlignment="Left" 
			Margin="0,437,0,0" 
			VerticalAlignment="Top" 
			Width="120"/>
        <Button x:Name="Cancel_Event" 
			Content="Cancel" 
			HorizontalAlignment="Left" 
			Margin="0,467,0,0" 
			VerticalAlignment="Top" 
			Width="120"/>
        <ListBox x:Name="Grid_Home"
			HorizontalAlignment="Left" 
			Height="345" 
			Margin="120,152,0,0" 
			VerticalAlignment="Top" 
			Width="278"/>
        <Button x:Name="Dashboard_Logout" 
			Content="Logout" 
			HorizontalAlignment="Left" 
			VerticalAlignment="Top" 
			Width="95" 
			Click="Dashboard_Logout_Click" 
			Height="22" 
            Margin="270,0,0,0"/>
        <Button Content="X" 
			VerticalAlignment="Bottom" 
            HorizontalAlignment="Right"
			Height="19" 
			Background="{DynamicResource ButtonBackgroundBrush}" 
			Click="Exit_Click" 
			Width="19" 
			Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
            Foreground="{DynamicResource Brush01}" 
            Margin="0,0,0,481" />
    </Grid>
</Window>