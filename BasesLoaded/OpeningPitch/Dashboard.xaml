<Window x:Name="tab_Dashboard" x:Class="OpeningPitch.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Softball Roster" Height="281" Width="454">
    <Grid x:Name="Dashboard1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="140*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Login_Home" Content="Home" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="Create_Team" Content="Team" HorizontalAlignment="Left" Margin="89,0,0,0" VerticalAlignment="Top" Width="75" Click="CreateTeam_Click" Height="22" Grid.ColumnSpan="2"/>
        <Button x:Name="Approve_Player" Content="Approve Player" HorizontalAlignment="Left" Margin="0,141,0,0" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="Edit_Roster" Content="Edit Roster" HorizontalAlignment="Left" Margin="0,163,0,0" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="Delete_Player" Content="Delete Player" HorizontalAlignment="Left" Margin="0,207,0,0" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="View_Roster" Content="View Roster" HorizontalAlignment="Left" Margin="0,185,0,0" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="Cancel_Event" Content="Cancel" HorizontalAlignment="Left" Margin="0,229,0,0" VerticalAlignment="Top" Width="89"/>
        <ListBox x:Name="grid_Home" HorizontalAlignment="Left" Height="229" Margin="89,22,0,0" VerticalAlignment="Top" Width="357" Grid.ColumnSpan="3"/>
        <Button x:Name="Dashboard_Logout" Content="Logout" Grid.Column="2" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Top" Width="75" Click="Dashboard_Logout_Click"/>
        <Button x:Name="btn_Notification" Content="Notification" HorizontalAlignment="Left" Margin="39,0,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
        <!--This also provides styling to the tab-->

        <!-- Below this Is where it starts adding picture to the tab-->


    </Grid>
</Window>