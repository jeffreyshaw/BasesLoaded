<Window x:Name="tab_Dashboard" x:Class="OpeningPitch.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Softball Roster" 
    Height="500" Width="400"
    WindowStartupLocation="CenterScreen"
    MouseDown="TC_Dashboard_MouseDown" 
    WindowStyle="None" 
    AllowsTransparency="True"
    ResizeMode="CanResizeWithGrip"
    MinWidth="400"
    MinHeight="500">

    <Grid x:Name="TC_Dashboard" 
          Background="{DynamicResource ButtonBackgroundBrush}">
        <Button x:Name="Login_Home1" 
			Content="Home" 
			HorizontalAlignment="Center" 
			Height="22" 
			VerticalAlignment="Center" 
			Width="95" 
            Margin="11,60,294,410"/>
        <Button x:Name="Create_Team1" 
			Content="Team" 
			HorizontalAlignment="Center" 
			Margin="106,60,199,410" 
			VerticalAlignment="Center" 
			Width="95" 
			Click="CreateTeam_Click" 
			Height="22"/>
        <Button x:Name="EditInfo_btn" 
        	Content="Edit Info" 
        	HorizontalAlignment="Center" 
        	VerticalAlignment="Center" 
        	Width="94" 
            Margin="201,60,105,410" 
            Height="24"/>
        <Button x:Name="Notification_btn" 
			Content="Notification" 
			HorizontalAlignment="Center" 
			Margin="295,60,10,410" 
			VerticalAlignment="Center" 
			Width="95" 
			Height="22"/>
        <Button x:Name="Approve_Player" 
			Content="Approve Player" 
			HorizontalAlignment="Center" 
			Margin="0,347,280,123" 
			VerticalAlignment="Center" 
			Width="120"/>
        <Button x:Name="Edit_Roster" 
			Content="Edit Roster" 
			HorizontalAlignment="Center" 
			Margin="0,377,280,93" 
			VerticalAlignment="Center" 
			Width="120"/>
        <Button x:Name="View_Roster" 
			Content="View Roster" 
			HorizontalAlignment="Center"
			Margin="0,407,280,63" 
			VerticalAlignment="Center" 
			Width="120"/>
        <Button x:Name="Delete_Player" 
			Content="Delete Player" 
			HorizontalAlignment="Center" 
			Margin="0,437,280,33" 
			VerticalAlignment="Center" 
			Width="120"/>
        <Button x:Name="Cancel_Event" 
			Content="Cancel" 
			HorizontalAlignment="Center" 
			Margin="0,467,280,3" 
			VerticalAlignment="Center" 
			Width="120"/>
        <ListBox x:Name="Grid_Home"
			HorizontalAlignment="Right" 
			Height="345" 
			VerticalAlignment="Bottom" 
			Width="278" Margin="0,0,2,3"/>
        <Button x:Name="Dashboard_Logout" 
			Content="Logout" 
			HorizontalAlignment="Right" 
			VerticalAlignment="Top" 
			Width="95" 
			Click="Dashboard_Logout_Click" 
			Height="22" 
            Margin="0,0,43,0"/>
        <Button Content="X" 
			VerticalAlignment="Top" 
            HorizontalAlignment="Right"
			Height="19" 
			Background="{DynamicResource ButtonBackgroundBrush}" 
			Click="Exit_Click" 
			Width="19" 
			Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
            Foreground="{DynamicResource Brush01}" 
            Margin="0,0,0,481" 
            TextOptions.TextFormattingMode="Display"
            ToolTip="Close" 
            FontWeight="Bold"/>
        <Button Content="-" 
                HorizontalAlignment="Right" 
                Margin="0,0,19,0" 
                VerticalAlignment="Top" 
                Width="19" 
                Height="19"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Foreground="{DynamicResource Brush01}" 
                TextOptions.TextFormattingMode="Display" 
                Click="Minimize_Button"
                ToolTip="Minimize" 
                FontWeight="Bold"/>
    </Grid>
</Window>