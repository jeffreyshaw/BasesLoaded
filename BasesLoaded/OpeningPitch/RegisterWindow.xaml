<Window x:Class="OpeningPitch.RegisterWindow" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" OpacityMask="White" WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterWindow" Height="350" Width="525">

    <Grid x:Name="Register_Window">
        <TextBox x:Name="First_Name_Input" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="134,10,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" Opacity="0.6"/>
        <Label x:Name="First_Name_Label" 
               Content="First Name" 
               HorizontalAlignment="Left" 
               Margin="16,10,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Label x:Name="First_Name_Required" 
               Content="*" 
               HorizontalAlignment="Left" 
               Margin="259,6,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <TextBox x:Name="Last_Name_Input" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="134,36,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" 
                 Opacity="0.6"/>
        <Label x:Name="Last_Name_Label" 
               Content="Last Name" 
               HorizontalAlignment="Left" 
               Margin="16,38,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Label x:Name="Last_Name_Required" 
               Content="*" 
               HorizontalAlignment="Left" 
               Margin="259,34,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <TextBox HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="134,64,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120"/>
        <Label Content="Address" 
               HorizontalAlignment="Left" 
               Margin="16,66,0,0" 
               VerticalAlignment="Top"/>
        <TextBox x:Name="E_Mail_Input" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="134,92,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" 
                 Opacity="0.6"/>
        <Label x:Name="E_Mail_Label" 
               Content="E-Mail" 
               HorizontalAlignment="Left" 
               Margin="16,94,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Label x:Name="E_Mail_Required" 
               Content="*" 
               HorizontalAlignment="Left" 
               Margin="259,146,0,0" 
               VerticalAlignment="Top" 
               Height="23" 
               RenderTransformOrigin="5.2,4.087"/>
        <TextBox x:Name="DOB_Input" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="134,120,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" 
                 Opacity="0.6"/>
        <Label x:Name="DOB_label" 
               Content="DOB" 
               HorizontalAlignment="Left" 
               Margin="16,120,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Label x:Name="DOB_Required" 
               Content="*" 
               HorizontalAlignment="Left" 
               Margin="259,92,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <TextBox x:Name="Phone_Number_Input" 
                 HorizontalAlignment="Left" 
                 Height="23"
                 Margin="134,148,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" 
                 Opacity="0.6"/>
        <Label x:Name="Phone_Number_Label" 
               Content="Phone Number" 
               HorizontalAlignment="Left" 
               Margin="16,148,0,0" 
               VerticalAlignment="Top" 
               Height="23"/>
        <Label x:Name="Position_Label" 
               Content="Desired Position" 
               HorizontalAlignment="Left" 
               Margin="16,203,0,0" 
               VerticalAlignment="Top" 
               Height="23" 
               Width="97"/>
        <Button x:Name="Register_Button" 
                Content="Register" 
                HorizontalAlignment="Left" 
                Margin="159,257,0,0" 
                VerticalAlignment="Top" 
                Width="75" Opacity="0.6" 
                Click="Register_Button_Click"/>
        <Label Content="* = Required" 
               HorizontalAlignment="Left" 
               Margin="10,314,0,0" 
               VerticalAlignment="Top" 
               Height="26"/>
        <Button Content="X" 
                Margin="506,0,0,0" 
                VerticalAlignment="Top" 
                Height="24" 
                Opacity="0.6" 
                Background="#FFFB0505" 
                Click="Exit_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="134,203,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="E_Mail_Required_Copy" 
        	Content="*" 
        	HorizontalAlignment="Left" 
        	Margin="259,174,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	RenderTransformOrigin="5.2,4.087"/>
        <ComboBox HorizontalAlignment="Left" Margin="134,176,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Male" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Female" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Unspecified" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="Position_Label_Copy" 
        	Content="Gender" 
        	HorizontalAlignment="Left" 
        	Margin="16,176,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	Width="97"/>
        <ComboBox HorizontalAlignment="Left" Margin="134,230,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="Secondary_Position_Label" 
        	Content="Secondary Position" 
        	HorizontalAlignment="Left" 
        	Margin="16,226,0,0" 
        	VerticalAlignment="Top" 
        	Height="26" 
        	Width="113"/>
        <ProgressBar x:Name="Prog_Bar" HorizontalAlignment="Left" 
                     Height="5" 
                     Margin="0,345,0,0" 
                     VerticalAlignment="Top" 
                     Width="525"/>

    </Grid>
</Window>
