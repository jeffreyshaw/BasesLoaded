<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:Obselete="clr-namespace:Xceed.Wpf.Toolkit.Obselete;assembly=Xceed.Wpf.Toolkit" 
        x:Class="OpeningPitch.RegisterWindow" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None"
        Title="RegisterWindow" Height="503" Width="402" MouseDown="Window_MouseDown">

    <Grid x:Name="Register_Window">
        <TextBox x:Name="First_Name_Input" 
			HorizontalAlignment="Left" 
			Height="23" 
			Margin="131,10,0,0" 
			TextWrapping="Wrap" 
			VerticalAlignment="Top" 
			Width="120" Opacity="0.6"/>
        <Label x:Name="First_Name_Label" 
			Content="First Name" 
			HorizontalAlignment="Left" 
			Margin="16,10,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <Label x:Name="First_Name_Required" 
			Content="*" 
			HorizontalAlignment="Left" 
			Margin="256,10,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <TextBox x:Name="Last_Name_Input" 
			HorizontalAlignment="Left" 
			Height="23" 
			Margin="131,38,0,0" 
			TextWrapping="Wrap" 
			VerticalAlignment="Top" 
			Width="120" 
			Opacity="0.6"/>
        <Label x:Name="Last_Name_Label" 
			Content="Last Name" 
			HorizontalAlignment="Left" 
			Margin="16,38,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <Label x:Name="Last_Name_Required" 
			Content="*" 
			HorizontalAlignment="Left" 
			Margin="256,38,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <TextBox x:Name="Address_Input" 
            HorizontalAlignment="Left" 
			Height="23" 
			Margin="131,64,0,0" 
			TextWrapping="Wrap" 
			VerticalAlignment="Top" 
			Width="120"/>
        <Label Content="Address" 
			HorizontalAlignment="Left" 
			Margin="16,66,0,0" 
			VerticalAlignment="Top"/>
        <TextBox x:Name="Email_Input" 
			HorizontalAlignment="Left" 
			Height="23" 
			Margin="131,92,0,0" 
			TextWrapping="Wrap" 
			VerticalAlignment="Top" 
			Width="120" 
			Opacity="0.6"
            InputScope="InputScopeNameValue.EmailSmtpAddress"/>
        <Label x:Name="E_Mail_Label" 
			Content="E-Mail" 
			HorizontalAlignment="Left" 
			Margin="16,94,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <Label x:Name="E_Mail_Required" 
			Content="*" 
			HorizontalAlignment="Left" 
			Margin="256,152,0,0" 
			VerticalAlignment="Top" 
			Height="23" 
			RenderTransformOrigin="5.2,4.087"/>
        <Label x:Name="DOB_Label" 
			Content="DOB" 
			HorizontalAlignment="Left" 
			Margin="16,120,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <Label x:Name="DOB_Required" 
			Content="*" 
			HorizontalAlignment="Left" 
			Margin="256,94,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <DatePicker x:Name="DatePicker" 
            HorizontalAlignment="Left" 
            Height="21" 
            Margin="131,123,0,0" 
            VerticalAlignment="Top" 
            Width="120" 
            SelectedDateFormat="Short"/>
        <Label x:Name="Phone_Number_Label" 
			Content="Phone Number" 
			HorizontalAlignment="Left" 
			Margin="16,148,0,0" 
			VerticalAlignment="Top" 
			Height="23"/>
        <xctk:MaskedTextBox x:Name="Phone_Number_Input1" 
            HorizontalAlignment="Left" 
            Margin="131,150,0,0" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            InputScope="InputScopeNameValue.TelephoneNumber"  
            Mask="(000) 000 - 0000" 
            Width="120" 
            Height="21" 
            RenderTransformOrigin="0.483,0.391"/>
        <Label x:Name="Position_Label" 
			Content="Desired Position" 
			HorizontalAlignment="Left" 
			Margin="16,232,0,0" 
			VerticalAlignment="Top" 
			Height="23" 
			Width="97"/>
        <Label Content="* = Required" 
			HorizontalAlignment="Left" 
			Margin="10,314,0,0" 
			VerticalAlignment="Top" 
			Height="26"/>
        <ComboBox x:Name="Gender_Selection" HorizontalAlignment="Left" Margin="131,178,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Male" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Female" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="Team_Label" 
        	Content="Desired Team" 
        	HorizontalAlignment="Left" 
        	Margin="16,205,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	Width="97"/>
        <ComboBox x:Name="Team_Selection" 
                  HorizontalAlignment="Left" 
                  Margin="131,206,0,0" 
                  VerticalAlignment="Top" 
                  Width="120">
        </ComboBox>
        <ComboBox x:Name="Position_Selection" HorizontalAlignment="Left" Margin="131,233,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <ComboBox x:Name="Alt_Position_Selection" HorizontalAlignment="Left" Margin="131,260,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="Alt_Position_Label2" 
        	Content="Alternate Position2" 
        	HorizontalAlignment="Left" 
        	Margin="16,286,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	Width="110"/>
        <Label x:Name="Alt_Position_Label1" 
        	Content="Alternate Position" 
        	HorizontalAlignment="Left" 
        	Margin="16,259,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	Width="110"/>
        <ComboBox x:Name="Alt_Position_Selection2" HorizontalAlignment="Left" Margin="131,287,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Alt_Position_Selection2_SelectionChanged">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <PasswordBox x:Name="New_Password_Input" 
                     HorizontalAlignment="Left" 
                     Height="26" Margin="131,376,0,0" 
                     VerticalAlignment="Top" 
                     Width="120"/>
        <PasswordBox x:Name="Confirm_Password_Input" 
                     HorizontalAlignment="Left" 
                     Height="26" 
                     Margin="131,407,0,0" 
                     VerticalAlignment="Top" 
                     Width="120"/>
        <Label x:Name="E_Mail_Required_Copy" 
			Content="*" 
			HorizontalAlignment="Left" 
			Margin="256,205,0,0" 
			VerticalAlignment="Top" 
			Height="23" 
			RenderTransformOrigin="5.2,4.087"/>
        <Button x:Name="Cancel_Button" 
        	Content="Cancel" 
        	HorizontalAlignment="Left" 
        	Margin="317,446,0,0" 
        	VerticalAlignment="Top" 
        	Width="75" Opacity="0.6" Click="Cancel_Button_Click" 
            IsCancel="True"/>
        <Button x:Name="Register_Button" 
			Content="Register" 
            IsDefault="True"
			HorizontalAlignment="Left" 
			Margin="317,471,0,0" 
			VerticalAlignment="Top" 
			Width="75" Opacity="0.6" 
            Click="Register_Button_Click"/>
        <Button Content="X" 
			Margin="0,-1,-1,0" 
			VerticalAlignment="Top" 
            HorizontalAlignment="Right"
			Height="24" 
			Opacity="0.6" 
			Background="#FFFB0505" 
			Click="Exit_Click"
            RenderTransformOrigin="0.5,0.5" Width="25">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="Gender_Label" 
			Content="Gender" 
			HorizontalAlignment="Left" 
			Margin="16,178,0,0" 
			VerticalAlignment="Top" 
			Height="23" 
			Width="97"/>
        <ProgressBar x:Name="Prog_Bar" 
            HorizontalAlignment="Left" 
			Height="5" 
			Margin="0,499,0,-1" 
			VerticalAlignment="Top" 
			Width="402"/>
        <Label x:Name="New_Password_Label" 
        	Content="New Password" 
        	HorizontalAlignment="Left" 
        	Margin="16,379,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	Width="97"/>
        <Label x:Name="Confirm_Password_Label" 
        	Content="Confirm Password" 
        	HorizontalAlignment="Left" 
        	Margin="15,407,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	Width="111"/>
        <Label x:Name="New_Password_Required" 
        	Content="*" 
        	HorizontalAlignment="Left" 
        	Margin="256,379,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	RenderTransformOrigin="5.2,4.087"/>
        <Label x:Name="Confrm_Password_Required" 
        	Content="*" 
        	HorizontalAlignment="Left" 
        	Margin="256,409,0,0" 
        	VerticalAlignment="Top" 
        	Height="23" 
        	RenderTransformOrigin="5.2,4.087"/>

    </Grid>
</Window>
