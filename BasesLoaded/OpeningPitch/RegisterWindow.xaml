<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:Obselete="clr-namespace:Xceed.Wpf.Toolkit.Obselete;assembly=Xceed.Wpf.Toolkit" 
        x:Class="OpeningPitch.RegisterWindow" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="RegisterWindow" 
        Height="500" 
        Width="400" 
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style BasedOn="{StaticResource TextBoxStyle}" TargetType="{x:Type TextBox}" />
    </Window.Resources>

    <Grid x:Name="Register_Window" 
          Background="{DynamicResource ButtonBackgroundBrush}">
        <TextBox x:Name="First_Name_Input" 
			HorizontalAlignment="Center" 
			Height="23" 
			Margin="130,10,150,460" 
			TextWrapping="Wrap" 
			VerticalAlignment="Center" 
			Width="120"/>
        <Label x:Name="First_Name_Label" 
			Content="First Name" 
			HorizontalAlignment="Center" 
			Margin="6,10,321,460" 
			VerticalAlignment="Center" 
			Height="30" 
            Foreground="{DynamicResource AccordionButtonExpandedBackgroundBrush}"/>
        <Label x:Name="First_Name_Required" 
			Content="*" 
			HorizontalAlignment="Center" 
			Margin="256,10,128,467" 
			VerticalAlignment="Center" 
			Height="23"/>
        <Label x:Name="Last_Name_Label" 
			Content="Last Name" 
			HorizontalAlignment="Center" 
			Margin="6,40,322,430" 
			VerticalAlignment="Center" 
			Height="30"/>
        <TextBox x:Name="Last_Name_Input" 
			HorizontalAlignment="Center" 
			Height="23" 
			Margin="130,40,150,430" 
			TextWrapping="Wrap" 
			VerticalAlignment="Center" 
			Width="120"/>
        <Label x:Name="Last_Name_Required" 
			Content="*" 
			HorizontalAlignment="Center" 
			Margin="255,40,129,437" 
			VerticalAlignment="Center" 
			Height="23"/>
        <Label x:Name="Address_Label"
            Content="Address 1" 
			HorizontalAlignment="Center" 
			Margin="6,70,326,400" 
			VerticalAlignment="Center"
            Height="30"/>
        <TextBox x:Name="Address_Input" 
            HorizontalAlignment="Center" 
			Height="23" 
			Margin="130,70,70,400" 
			TextWrapping="Wrap" 
			VerticalAlignment="Center" 
			Width="200"/>
        <Label x:Name="Address2_Label"
            Content="Address 2" 
        	HorizontalAlignment="Center" 
        	Margin="6,100,326,370" 
        	VerticalAlignment="Center"
        	Height="30"/>
        <TextBox x:Name="Address2_Input" 
        	HorizontalAlignment="Center" 
        	Height="23" 
        	Margin="130,100,70,370" 
        	TextWrapping="Wrap" 
        	VerticalAlignment="Center" 
        	Width="200"/>
        <ComboBox x:Name="State_Input" 
        	HorizontalAlignment="Center" 
        	Margin="130,130,209,340" 
        	VerticalAlignment="Center" 
        	Width="61">
        </ComboBox>
        <Label x:Name="State_Label" 
        	Content="State" 
        	HorizontalAlignment="Center" 
        	Margin="6,132,354,340" 
        	VerticalAlignment="Center"/>
        <TextBox x:Name="Zipcode_Input" 
            HorizontalAlignment="Center" 
            Height="26" 
            Margin="266,130,70,340" 
            TextWrapping="Wrap" 
            VerticalAlignment="Center"
            Width="64"/>
        <Label x:Name="Zipcode_label" 
        	Content="Zipcode" 
        	HorizontalAlignment="Center" 
        	Margin="206,130,134,340" 
        	VerticalAlignment="Center" 
            Height="30" 
            Width="60"/>
        <TextBox x:Name="Email_Input" 
			HorizontalAlignment="Center" 
			Height="23" 
			Margin="130,176,150,294" 
			TextWrapping="Wrap" 
			VerticalAlignment="Center" 
			Width="120"
            InputScope="InputScopeNameValue.EmailSmtpAddress"/>
        <Label x:Name="E_Mail_Label" 
			Content="E-Mail" 
			HorizontalAlignment="Center" 
			Margin="6,176,347,294" 
			VerticalAlignment="Center" 
			Height="30"/>
        <Label x:Name="E_Mail_Required" 
			Content="*" 
			HorizontalAlignment="Center" 
			Margin="255,209,129,268" 
			VerticalAlignment="Center" 
			Height="23" 
			RenderTransformOrigin="5.2,4.087"/>
        <Label x:Name="DOB_Required" 
			Content="*" 
			HorizontalAlignment="Center" 
			Margin="255,176,129,301" 
			VerticalAlignment="Center" 
			Height="23"/>
        <Label x:Name="Phone_Number_Label" 
			Content="Phone Number" 
			HorizontalAlignment="Center" 
			Margin="6,206,295,264" 
			VerticalAlignment="Center" 
			Height="30"/>
        <xctk:MaskedTextBox x:Name="Phone_Number_Input" 
            HorizontalAlignment="Center" 
            Margin="130,206,150,264" 
            TextWrapping="Wrap"  
            VerticalAlignment="Center" 
            InputScope="InputScopeNameValue.TelephoneNumber"  
            Mask="(000) 000 - 0000" 
            Width="120" 
            Height="30" 
            RenderTransformOrigin="0.483,0.391" 
            Background="#FF181818" 
            Foreground="{StaticResource ForegroundBrush}" 
            BorderBrush="{DynamicResource ButtonBorderBrush}" 
            CaretBrush="{DynamicResource TransparentBrush}"/>
        <Label x:Name="Position_Label" 
			Content="Desired Position" 
			HorizontalAlignment="Center" 
			Margin="6,266,278,204" 
			VerticalAlignment="Center" 
			Height="30" 
			Width="116"/>
        <Label x:Name="Gender_Label" 
			Content="Gender" 
			HorizontalAlignment="Center" 
			Margin="6,236,297,234" 
			VerticalAlignment="Center" 
			Height="30" 
			Width="97"/>
        <ComboBox x:Name="Gender_Selection" 
                  HorizontalAlignment="Center" 
                  Margin="130,236,150,234" 
                  VerticalAlignment="Center" 
                  Width="120">
            <ComboBoxItem Content="Male" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Female" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <ComboBox x:Name="Position_Selection" HorizontalAlignment="Center" Margin="130,266,150,204" VerticalAlignment="Center" Width="120">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <ComboBox x:Name="Alt_Position_Selection" HorizontalAlignment="Center" Margin="130,296,150,174" VerticalAlignment="Center" Width="120">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="Alt_Position_Label2" 
        	Content="Alternate Position2" 
        	HorizontalAlignment="Center" 
        	Margin="6,326,270,144" 
        	VerticalAlignment="Center" 
        	Height="30" 
        	Width="124"/>
        <Label x:Name="Alt_Position_Label1" 
        	Content="Alternate Position" 
        	HorizontalAlignment="Center" 
        	Margin="6,296,278,174" 
        	VerticalAlignment="Center" 
        	Height="30" 
        	Width="116"/>
        <ComboBox x:Name="Alt_Position_Selection2" HorizontalAlignment="Center" Margin="130,326,150,144" VerticalAlignment="Center" Width="120">
            <ComboBoxItem Content="Pitcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Catcher" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="First Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Second Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Shortstop" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Third Base" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Right Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Center Field" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Left Field" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <StackPanel Margin="261,339,10,99">
            <RadioButton GroupName="User_Type" Content="Team Captain" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderBrush="{DynamicResource ButtonBorderBrush}" Margin="16,0"/>
            <RadioButton GroupName="User_Type" Content="Team Player" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderBrush="{DynamicResource ButtonBorderBrush}" Margin="16,0" Height="31" Width="97" />
        </StackPanel>
        <Label x:Name="New_Password_Label" 
        	Content="New Password" 
        	HorizontalAlignment="Center" 
        	Margin="10,400,293,73" 
        	VerticalAlignment="Center" 
        	Height="27" 
        	Width="97"/>
        <Label x:Name="New_Password_Required" 
        	Content="*" 
        	HorizontalAlignment="Center" 
        	Margin="255,397,129,80" 
        	VerticalAlignment="Center" 
        	Height="23" 
        	RenderTransformOrigin="5.2,4.087"/>
        <PasswordBox x:Name="New_Password_Input" 
                     HorizontalAlignment="Center" 
                     Height="26" Margin="130,397,150,73" 
                     VerticalAlignment="Center" 
                     Width="120"/>
        <Label x:Name="Confirm_Password_Label" 
        	Content="Confirm Password" 
        	HorizontalAlignment="Center" 
        	Margin="10,432,274,43" 
        	VerticalAlignment="Center" 
        	Height="25" 
        	Width="116"/>
        <Label x:Name="Confrm_Password_Required" 
        	Content="*" 
        	HorizontalAlignment="Center" 
        	Margin="255,427,129,50" 
        	VerticalAlignment="Center" 
        	Height="23" 
        	RenderTransformOrigin="5.2,4.087"/>
        <PasswordBox x:Name="Confirm_Password_Input" 
                     HorizontalAlignment="Center" 
                     Height="26" 
                     Margin="130,427,150,43" 
                     VerticalAlignment="Center" 
                     Width="120"/>
        <Button x:Name="Cancel_Button" 
        	Content="Cancel" 
        	HorizontalAlignment="Center" 
        	Margin="315,430,10,40" 
        	VerticalAlignment="Center" 
        	Width="75" Click="Cancel_Button_Click" 
            IsCancel="True"/>
        <Button x:Name="Register_Button" 
			Content="Register" 
            IsDefault="True"
			HorizontalAlignment="Center" 
			Margin="315,460,10,10" 
			VerticalAlignment="Center" 
			Width="75" 
            Click="Register_Button_Click"/>
        <Button Content="X" 
			Margin="0,0,1,0" 
			VerticalAlignment="Top" 
            HorizontalAlignment="Right"
			Height="19" 
			Background="{DynamicResource ButtonBackgroundBrush}" 
			Click="Exit_Click"
            Width="19"
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
            Foreground="{DynamicResource Brush01}" 
            TextOptions.TextFormattingMode="Display"
            ToolTip="Close" 
            FontWeight="Bold"/>
        <Button Content="-" 
                HorizontalAlignment="Right" 
                Margin="0,0,20,0" 
                VerticalAlignment="Top" 
                Width="19" 
                Height="19"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Foreground="{DynamicResource Brush01}" 
                TextOptions.TextFormattingMode="Display" 
                Click="Minimize_Button"
                ToolTip="Minimize" 
                FontWeight="Bold"/>
        <ProgressBar x:Name="Prog_Bar" 
            HorizontalAlignment="Center" 
			Height="5" 
			Margin="0,499,0,-1" 
			VerticalAlignment="Bottom" 
			Width="402"/>
        <Label Content="* = Required" 
			HorizontalAlignment="Center" 
			Margin="10,468,305,6" 
			VerticalAlignment="Center" 
			Height="26"/>
    </Grid>
</Window>
