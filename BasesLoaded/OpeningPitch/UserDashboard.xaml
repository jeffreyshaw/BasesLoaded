<Window x:Name="Player_Profile" x:Class="OpeningPitch.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserDashboard" 
        Height="500" 
        Width="400" 
        WindowStartupLocation="CenterScreen" 
        MouseDown="Player_Profile_MouseDown" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="{DynamicResource ButtonBackgroundBrush}">
    
    <Grid x:Name="PlayerProfile" 
          Background="{DynamicResource ButtonBackgroundBrush}">
        <Button x:Name="btn_Logout" 
                Content="Logout" 
                HorizontalAlignment="Left" 
                Margin="270,0,0,0" 
                VerticalAlignment="Top" 
                Width="95" 
                Click="btn_Logout_Click" 
                Height="24"/>
        <Button x:Name="btn_EditInfo" 
                Content="Edit Info" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="95" 
                Margin="10,65,0,0" 
                Height="24"/>
        <Label x:Name="lbl_Name" 
               Content="Name" 
               HorizontalAlignment="Left" 
               Height="25" 
               Margin="14,120,0,0" 
               VerticalAlignment="Top" 
               Width="45"/>
        <Label x:Name="lbl_Email" 
               Content="Email" 
               HorizontalAlignment="Left" 
               Height="29" 
               Margin="15,150,0,0" 
               VerticalAlignment="Top" 
               Width="44"/>
        <Label x:Name="lbl_Phone" 
               Content="Phone" 
               HorizontalAlignment="Left" 
               Height="24" 
               Margin="15,247,0,0" 
               VerticalAlignment="Top" 
               Width="59"/>
        <Label x:Name="lbl_Address" 
               Content="Address" 
               HorizontalAlignment="Left" 
               Height="27" 
               Margin="15,215,0,0" 
               VerticalAlignment="Top" 
               Width="60"/>
        <Label Grid.Column="1" 
               HorizontalAlignment="Left" 
               Height="3" 
               Margin="19,174,0,0" 
               VerticalAlignment="Top" 
               Width="22"/>
        <Label x:Name="lbl_UserTeam" 
               Content="Team" 
               HorizontalAlignment="Left" 
               Height="31" 
               Margin="15,184,0,0" 
               VerticalAlignment="Top" 
               Width="44"/>
        <Button Content="X" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right"
                Height="24" 
                Opacity="0.6" 
                Background="#FFFB0505" 
                Click="Exit_Click" 
                Width="25" 
                Grid.Column="1"/>
        <Button x:Name="btn_UserViewRoster" Content="View Roster" HorizontalAlignment="Left" Margin="270,65,0,0" VerticalAlignment="Top" Width="95" Height="24"/>
    </Grid>
</Window>
