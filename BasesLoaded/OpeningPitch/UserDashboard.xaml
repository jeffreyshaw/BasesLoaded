<Window x:Name="Player_Profile" x:Class="OpeningPitch.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserDashboard" 
        Height="500" 
        Width="400" 
        WindowStartupLocation="CenterScreen" 
        MouseDown="Player_Profile_MouseDown" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="{DynamicResource ButtonBackgroundBrush}"
        ResizeMode="CanResizeWithGrip"
        MinWidth="400"
        MinHeight="500">
    
    <Grid x:Name="PlayerProfile" 
          Background="{DynamicResource ButtonBackgroundBrush}">
        <Button x:Name="Logout_btn" 
                Content="Logout" 
                HorizontalAlignment="Left" 
                Margin="207,0,0,0" 
                VerticalAlignment="Top" 
                Width="95" 
                Click="Logout_btn_Click" 
                Height="24"/>
        <Button x:Name="EditInfo_btn" 
                Content="Edit Info" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="95" 
                Margin="10,65,0,0" 
                Height="24"/>
        <Label x:Name="Name_Label" 
               Content="Name" 
               HorizontalAlignment="Left" 
               Height="25" 
               Margin="14,120,0,0" 
               VerticalAlignment="Top" 
               Width="45"/>
        <Label x:Name="Email_Label" 
               Content="Email" 
               HorizontalAlignment="Left" 
               Height="29" 
               Margin="15,150,0,0" 
               VerticalAlignment="Top" 
               Width="44"/>
        <Label x:Name="Phone_Label" 
               Content="Phone" 
               HorizontalAlignment="Left" 
               Height="24" 
               Margin="15,247,0,0" 
               VerticalAlignment="Top" 
               Width="59"/>
        <Label x:Name="Address_Label" 
               Content="Address" 
               HorizontalAlignment="Left" 
               Height="27" 
               Margin="15,215,0,0" 
               VerticalAlignment="Top" 
               Width="60"/>
        <Label Grid.Column="1" 
               HorizontalAlignment="Left" 
               Height="3" 
               Margin="19,174,0,0" 
               VerticalAlignment="Top" 
               Width="22"/>
        <Label x:Name="UserTeam_Label" 
               Content="Team" 
               HorizontalAlignment="Left" 
               Height="31" 
               Margin="15,184,0,0" 
               VerticalAlignment="Top" 
               Width="44"/>
        <Button Content="X" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right"
                Height="19" 
                Background="{DynamicResource ButtonBackgroundBrush}" 
                Click="Exit_Click" 
                Width="19" 
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Foreground="{DynamicResource Brush01}"
                TextOptions.TextFormattingMode="Display"
                ToolTip="Close" 
                FontWeight="Bold"/>
        <Button Content="-" 
                HorizontalAlignment="Left" 
                Margin="362,0,0,0" 
                VerticalAlignment="Top" 
                Width="19" 
                Height="19"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Foreground="{DynamicResource Brush01}" 
                Click="Minimize_Button" 
                TextOptions.TextFormattingMode="Display"
                ToolTip="Minimize" 
                FontWeight="Bold"/>
        <Button x:Name="UserViewRoster_btn" 
                Content="View Roster" 
                HorizontalAlignment="Left" 
                Margin="270,65,0,0" 
                VerticalAlignment="Top"
                Width="95" 
                Height="24"/>
    </Grid>
</Window>
