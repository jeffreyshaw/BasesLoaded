<Window x:Name="Player_Profile" x:Class="OpeningPitch.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserDashboard" Height="500" Width="400" WindowStartupLocation="CenterScreen" MouseDown="Player_Profile_MouseDown" WindowStyle="None" AllowsTransparency="True">
    <Grid x:Name="PlayerProfile" 
          Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="grid_PlayerProfile" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Height="386" 
                  Width="398" 
                  Margin="0,94,0,0" 
                  Grid.ColumnSpan="2"/>
        <Button x:Name="btn_Logout" 
                Content="Logout" 
                HorizontalAlignment="Left" 
                Margin="97,0,0,0" 
                VerticalAlignment="Top" 
                Width="75" 
                Grid.Column="1" 
                Click="btn_Logout_Click" Height="24"/>
        <Button x:Name="btn_EditInfo" 
                Content="Edit Info" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="75" Margin="10,65,0,0" Height="24"/>
        <Label x:Name="lbl_Name" 
               Content="Name" 
               HorizontalAlignment="Left" 
               Height="25" 
               Margin="14,120,0,0" 
               VerticalAlignment="Top" 
               Width="45"/>
        <Label x:Name="lbl_Email" 
               Content="Email" 
               HorizontalAlignment="Left" 
               Height="29" Margin="15,150,0,0" 
               VerticalAlignment="Top" Width="44"/>
        <Label x:Name="lbl_Phone" Content="Phone" 
               HorizontalAlignment="Left" 
               Height="24" 
               Margin="15,252,0,0" 
               VerticalAlignment="Top" 
               Width="44"/>
        <Label x:Name="lbl_Address" 
               Content="Address" 
               HorizontalAlignment="Left" 
               Height="27" 
               Margin="14,220,0,0" 
               VerticalAlignment="Top" 
               Width="60"/>
        <Label Grid.Column="1" 
               HorizontalAlignment="Left" 
               Height="3" 
               Margin="19,174,0,0" 
               VerticalAlignment="Top" 
               Width="22"/>
        <Label x:Name="lbl_UserTeam" 
               Content="Team" 
               HorizontalAlignment="Left" 
               Height="31" 
               Margin="15,184,0,0" 
               VerticalAlignment="Top" 
               Width="44"/>
        <Button Content="X" 
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Height="24" 
                Opacity="0.6" 
                Background="#FFFB0505" 
                Click="Exit_Click" RenderTransformOrigin="0.5,0.5" Width="25" Grid.Column="1"/>
    </Grid>
</Window>
