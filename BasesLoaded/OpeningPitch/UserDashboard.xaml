<Window x:Name="Player_Profile" x:Class="OpeningPitch.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:grid="http://schemas.microsoft.com/wpf/2008/toolkit"
        Title="UserDashboard" 
        Height="500" 
        Width="690" 
        WindowStartupLocation="CenterScreen" 
        MouseDown="Player_Profile_MouseDown" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="{DynamicResource ButtonBackgroundBrush}"
        ResizeMode="CanResizeWithGrip"
        MinWidth="690"
        MinHeight="500">

    <Grid x:Name="PlayerProfile" 
          Background="{DynamicResource ButtonBackgroundBrush}">
        <Button x:Name="Logout_btn" 
                Content="Logout" 
                HorizontalAlignment="Center" 
                Margin="10,10,585,460" 
                VerticalAlignment="Center" 
                Width="95" 
                Click="Logout_btn_Click" 
                Height="24"/>
        <Button x:Name="EditInfo_btn" 
                Content="Edit Info" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="95" 
                Margin="10,85,585,385" 
                Height="24" 
                Click="EditInfo_btn_Click"/>
        <Button x:Name="Update"
                Content="Update" 
                HorizontalAlignment="Center" 
                Margin="110,85,505,385" 
                VerticalAlignment="Center" 
                Width="75" 
                Click="Update_Click"/>
        <Button x:Name="UserViewRoster_btn" 
                Content="View Roster" 
                HorizontalAlignment="Center" 
                Margin="585,85,10,385" 
                VerticalAlignment="Center"
                Width="95" 
                Height="24" 
                Click="UserViewRoster_btn_Click"/>
        <Button Content="X" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right"
                Height="25" 
                Background="{DynamicResource ButtonBackgroundBrush}" 
                Click="Exit_Click" 
                Width="25" 
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Foreground="{DynamicResource Brush01}"
                TextOptions.TextFormattingMode="Display"
                ToolTip="Close" 
                FontWeight="Bold" 
                Margin="0,10,10,0" 
                FontSize="14"/>
        <Button Content="-" 
                HorizontalAlignment="Right" 
                Margin="0,10,35,0" 
                VerticalAlignment="Top" 
                Width="25" 
                Height="25"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Foreground="{DynamicResource Brush01}" 
                Click="Minimize_Button" 
                TextOptions.TextFormattingMode="Display"
                ToolTip="Minimize" 
                FontWeight="Bold" 
                FontSize="14"/>
        <DataGrid x:Name="User_View" 
                  AutoGenerateColumns="False"  
                  AlternationCount="2" 
                  SelectionMode="Single" 
                  Margin="10,120,10,10" 
                  Background="{DynamicResource ButtonBackgroundBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding  Path=FirstName}"
                                    IsReadOnly="True"
                                    Header="First Name" 
                                    Width="Auto" />
                <DataGridTextColumn Binding="{Binding Path=LastName}" 
                                    IsReadOnly="True"
                                    Header="Last Name" 
                                    Width="Auto" />
                <DataGridTextColumn x:Name="emailField" 
                                    Binding="{Binding Path=Email}"                                      
                                    IsReadOnly="True"
                                    Header="Email" 
                                    Width="Auto" />
                <DataGridTextColumn x:Name="phoneNumber" 
                                    Binding="{Binding Path=PhoneNumber}" 
                                    IsReadOnly="True"
                                    Header="Phone Number" 
                                    Width="Auto" />
                <DataGridTextColumn x:Name="address1" 
                                    Binding="{Binding Path=Address}"                                     
                                    IsReadOnly="True"
                                    Header="Address"
                                    Width="Auto" />
                <DataGridTextColumn x:Name="address2" 
                                    Binding="{Binding Path=Address2}"                                    
                                    IsReadOnly="True"
                                    Header="Address 2" 
                                    Width="Auto" />
                <DataGridTextColumn x:Name="city" 
                                    Binding="{Binding Path=City}"                                    
                                    IsReadOnly="True"
                                    Header="City" 
                                    Width="Auto" />
                <DataGridTextColumn x:Name="state" 
                                    Binding="{Binding Path=State}"                                     
                                    IsReadOnly="True"
                                    Header="State" 
                                    Width="Auto" />
                <DataGridTextColumn x:Name="zipcode"
                                    Binding="{Binding Path=Zipcode}"                                     
                                    IsReadOnly="True"
                                    Header="Zip Code"
                                    Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
